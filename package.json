{
	"name": "@idleberg/yeoman-generator",
	"version": "0.1.5",
	"description": "An opinionated drop-in replacement for Yeoman generators, using modern libraries",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/yeoman-generator.git"
	},
	"keywords": [
		"yeoman-generator",
		"clack-prompts",
		"clack",
		"eta",
		"yeoman"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		}
	},
	"engines": {
		"node": ">=20"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"publish:jsr": "deno publish",
		"publish:npm": "np",
		"test": "#vitest run"
	},
	"dependencies": {
		"@yeoman/adapter": "^4.0.1",
		"glob": "^13.0.6",
		"is-binary-path": "^3.0.0",
		"kleur": "^4.1.5",
		"mem-fs-editor": "^11.1.4",
		"yeoman-adapter-clack": "^0.2.2",
		"yeoman-environment": "^5.1.3",
		"yeoman-generator": "^7.5.1"
	},
	"devDependencies": {
		"@clack/prompts": "^1.0.1",
		"@commitlint/cli": "^20.4.2",
		"@commitlint/config-conventional": "^20.4.2",
		"@idleberg/configs": "^0.4.2",
		"@types/node": "^24.10.0",
		"@vitest/coverage-v8": "^4.0.18",
		"concurrently": "^9.2.1",
		"np": "^11.0.2",
		"tsdown": "0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"@clack/prompts": "^1.0.0",
		"eta": "^4.5.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
